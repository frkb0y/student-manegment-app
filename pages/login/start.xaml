<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             x:Class="plz_fix.pages.login.start"
             Title="">

    <!-- Hide the Navigation Bar Title -->
    <Shell.NavBarHasShadow>False</Shell.NavBarHasShadow>
    <Shell.TitleView>
        <Label Text=" " />
        <!-- Empty title to hide it -->
    </Shell.TitleView>

    <!-- Page Background -->
    <ContentPage.Background>
        <AppThemeBinding Light="{StaticResource BackgroundColorLight}" Dark="{StaticResource BackgroundColorDark}" />
    </ContentPage.Background>

    <!-- Main Layout -->
    <VerticalStackLayout>

        <!-- Image -->
        <Frame BorderColor="Transparent"
               BackgroundColor="Transparent"
               Margin="0,50,0,-10"
               Padding="-80" 
               HorizontalOptions="Center" 
               VerticalOptions="Center">
            <Image Source="saly1.png" 
                   HorizontalOptions="Start" 
                   VerticalOptions="Center" />
        </Frame>

        <!-- App Title -->
        <VerticalStackLayout Margin="20,150,25,0">
            <Label Text="{loc:Translate WelcomeText}"
                   FontSize="28" 
                   FontAttributes="Bold" 
                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryColorLight}, Dark={StaticResource TextPrimaryColorDark}}" 
                   HorizontalOptions="Start" 
                   HorizontalTextAlignment="Start" />

            <!-- Description -->
            <Label Text="{loc:Translate Description}"
                   FontSize="17"
                   FontAttributes="Italic"
                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryColorLight}, Dark={StaticResource TextSecondaryColorDark}}" 
                   Margin="0,20,0,20"/>

            <!-- Get Started Button -->
            <Button Text="{loc:Translate GetStartedButton}"
                    HorizontalOptions="Fill"
                    BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryColorLight}, Dark={StaticResource PrimaryColorDark}}"
                    TextColor="White" 
                    CornerRadius="14" 
                    WidthRequest="372"
                    FontSize="16" 
                    HeightRequest="55" 
                    Clicked="OnGetStartedClicked" />

          

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
