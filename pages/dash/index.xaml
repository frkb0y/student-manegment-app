<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="plz_fix.pages.dash.index"
             x:Name="DashboardPage"
             Title="Dashboard" 
    IconImageSource="dashboard_icon.png">
    <!-- Optional icon -->

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <!-- Header Section -->
            <Label Text="Hi, Student" FontSize="24" FontAttributes="Bold" />
            <Label Text="Here is your activity today." FontSize="16" TextColor="Gray" />

            <!-- Stats Section (2x2 Grid) -->
            <Grid Margin="0,20,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Presence Card -->
                <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#F7F9FC" CornerRadius="15" Padding="15" Margin="5" HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="89%" FontSize="20" FontAttributes="Bold" TextColor="#F59E0B"/>
                        <Label Text="Presence" FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Completeness Card -->
                <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#F7F9FC" CornerRadius="15" Padding="15" Margin="5" HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="100%" FontSize="20" FontAttributes="Bold" TextColor="#2563EB"/>
                        <Label Text="Completeness" FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Assignments Card -->
                <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#F7F9FC" CornerRadius="15" Padding="15" Margin="5" HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="18" FontSize="20" FontAttributes="Bold" TextColor="#10B981"/>
                        <Label Text="Assignments" FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Subject Card -->
                <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#F7F9FC" CornerRadius="15" Padding="15" Margin="5" HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Start">
                        <Label Text="12" FontSize="20" FontAttributes="Bold" TextColor="#F59E0B"/>
                        <Label Text="Total Subject" FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Quick Actions Section -->
            <HorizontalStackLayout 
    HorizontalOptions="Fill" 
    Spacing="18"
    Margin="0,0,0,10">

                <!-- Exam -->
                <VerticalStackLayout HorizontalOptions="Center" Padding="10">
                    <Frame WidthRequest="60" HeightRequest="60" CornerRadius="20"
               BackgroundColor="#E0F2FE" Padding="10" HorizontalOptions="Center">
                        <Image Source="dotnet_bot.png" HeightRequest="40" WidthRequest="40"/>
                    </Frame>
                    <Label Text="Exam" FontSize="14" TextColor="Gray" HorizontalOptions="Center" Margin="0,10,0,0"/>
                </VerticalStackLayout>

                <!-- Subjects -->
                <VerticalStackLayout HorizontalOptions="Center" Padding="10">
                    <Frame WidthRequest="60" HeightRequest="60" CornerRadius="20"
               BackgroundColor="#FFEDD5" Padding="10" HorizontalOptions="Center">
                        <Image Source="dotnet_bot.png" HeightRequest="40" WidthRequest="40"/>
                    </Frame>
                    <Label Text="Subjects" FontSize="14" TextColor="Gray" HorizontalOptions="Center" Margin="0,10,0,0"/>
                </VerticalStackLayout>

                <!-- Calendar -->
                <VerticalStackLayout HorizontalOptions="Center" Padding="10">
                    <Frame WidthRequest="60" HeightRequest="60" CornerRadius="20"
               BackgroundColor="#FEF9C3" Padding="10" HorizontalOptions="Center">
                        <Image Source="dotnet_bot.png" HeightRequest="40" WidthRequest="40"/>
                    </Frame>
                        <Label Text="Calendar" FontSize="14" TextColor="Gray" HorizontalOptions="Center" Margin="0,10,0,0"/>
                </VerticalStackLayout>

                <!-- Record -->
                <VerticalStackLayout HorizontalOptions="Center" Padding="10">
                    <Frame WidthRequest="60" HeightRequest="60" CornerRadius="20"
               BackgroundColor="#D1FAE5" Padding="10" HorizontalOptions="Center">
                        <Image Source="dotnet_bot.png" HeightRequest="40" WidthRequest="40"/>
                    </Frame>
                            <Label Text="Record" FontSize="14" TextColor="Gray" HorizontalOptions="Center" Margin="0,10,0,0"/>
                </VerticalStackLayout>

            </HorizontalStackLayout>




            <!-- To-Do Section -->
            <Label Text="To Do" FontSize="20" FontAttributes="Bold" Margin="0,10,0,10" />

            <VerticalStackLayout Spacing="10">
                <!-- Task Item 1 -->
                <Frame BackgroundColor="White" Padding="15" CornerRadius="10" HasShadow="True">
                    <VerticalStackLayout>
                        <!-- Work name and Date in the same row -->
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Work name" FontSize="16" FontAttributes="Bold"
                       Grid.Column="0" VerticalOptions="Center"/>

                            <Frame Padding="5,2" CornerRadius="10" BackgroundColor="#B0D6FF" Grid.Column="1">
                                <Label Text="April.19 12:31" FontSize="12" TextColor="Black"/>
                            </Frame>
                        </Grid>

                        <!-- Work Description (fills full width) -->
                        <Label Text="Work description Work description Work description Work description" 
                   FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Task Item 2 -->
                <Frame BackgroundColor="White" Padding="15" CornerRadius="10" HasShadow="True">
                    <VerticalStackLayout>
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Web Project" FontSize="16" FontAttributes="Bold"
                       Grid.Column="0" VerticalOptions="Center"/>

                            <Frame Padding="5,2" CornerRadius="10" BackgroundColor="#B0D6FF" Grid.Column="1">
                                <Label Text="April.19 16:20" FontSize="12" TextColor="Black"/>
                            </Frame>
                        </Grid>

                        <Label Text="Work description Work description Work description Work description" 
                   FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Task Item 3 -->
                <Frame BackgroundColor="White" Padding="15" CornerRadius="10" HasShadow="True">
                    <VerticalStackLayout>
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Record Notes" FontSize="16" FontAttributes="Bold"
                       Grid.Column="0" VerticalOptions="Center"/>

                            <Frame Padding="5,2" CornerRadius="10" BackgroundColor="#B0D6FF" Grid.Column="1">
                                <Label Text="April.19 19:07" FontSize="12" TextColor="Black"/>
                            </Frame>
                        </Grid>

                        <Label Text="Work description Work description Work description Work description" 
                   FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>









        </VerticalStackLayout>
    </ScrollView>





</ContentPage>