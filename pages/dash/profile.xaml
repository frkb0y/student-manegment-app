<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="profile"
             x:Class="plz_fix.pages.dash.profile"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Profile Section -->
            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                <Frame WidthRequest="130" HeightRequest="130" CornerRadius="65" BackgroundColor="#E0ECFF"
                       HorizontalOptions="Center" Padding="10">
                    <Image Source="profile_placeholder.png" WidthRequest="110" HeightRequest="110"/>
                </Frame>
                <Label Text="Lucas Scott" FontSize="24" FontAttributes="Bold" TextColor="Black"
                       HorizontalOptions="Center"/>
                <Label Text="@lucasscott3" FontSize="16" TextColor="Gray"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Note Section -->
            <Label Text="Note" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Frame HasShadow="False" BackgroundColor="White" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Score" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start" Clicked="noteClicked"/>
                   
                </VerticalStackLayout>
            </Frame>

            <!-- Account & Security Section -->
            <Label Text="Account &amp; Security" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Frame HasShadow="False" BackgroundColor="White" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Settings" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                    <Button Text="Manage Devices" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Notification Section -->
            <Label Text="Notifications" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Frame HasShadow="False" BackgroundColor="White" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Email Notifications" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                    <Button Text="Push Notifications" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Privacy & Data Section -->
            <Label Text="Privacy &amp; Data" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Frame HasShadow="False" BackgroundColor="White" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Manage Privacy Settings" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                    <Button Text="Data Usage" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Help & About Section -->
            <Label Text="Help &amp; About" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Frame HasShadow="False" BackgroundColor="White" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Help Center" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                    <Button Text="About Us" FontSize="16" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Button Text="Logout" BackgroundColor="White" TextColor="Red" FontSize="16" FontAttributes="Bold"
                    BorderColor="Red" BorderWidth="1" CornerRadius="10" HeightRequest="50"/>
            <Button Text="Delete My Account" BackgroundColor="White" TextColor="Red" FontSize="16" FontAttributes="Bold"
                    BorderColor="Red" BorderWidth="1" CornerRadius="10" HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
