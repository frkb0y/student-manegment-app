<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:plz_fix.Resources.helpers"
             x:Class="plz_fix.pages.dash.task"
             Title="Task Tracker">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">

            <!-- Title -->
            <Label Text="To Do"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <!-- Add New Task Card -->
            <Frame BackgroundColor="#E0F2F1"
                   Padding="15"
                   CornerRadius="15"
                   HasShadow="True"
                   Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Add New Task"
                           FontSize="18"
                           VerticalOptions="Center"
                           TextColor="Black"/>
                    <Button Text="+"
                            FontSize="28"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Clicked="OnAddTaskClicked"
                            WidthRequest="45"
                            HeightRequest="45"
                            CornerRadius="22"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            Grid.Column="1"/>
                </Grid>
            </Frame>

            <!-- Task List -->
            <CollectionView x:Name="TaskListView">
                <CollectionView.EmptyView>
                    <Label Text="No tasks available."
                           HorizontalOptions="Center"
                           VerticalOptions="CenterAndExpand"
                           TextColor="Gray"/>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               Padding="20"
                               CornerRadius="15"
                               HasShadow="True"
                               Margin="10,5">
                            <VerticalStackLayout>
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label Text="{Binding WorkName}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           Grid.Column="0"
                                           VerticalOptions="Center"/>
                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                        <Frame Padding="6,3"
                                               CornerRadius="12"
                                               BackgroundColor="#B0D6FF">
                                            <Label Text="{Binding StartDate, StringFormat='{0:MMM.dd HH:mm}'}"
                                                   FontSize="14"
                                                   TextColor="Black"/>
                                        </Frame>
                                        <Label Text="{Binding CreatedByName, StringFormat='from {0}'}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </Grid>
                                <Label Text="{Binding WorkDescription}"
                                       FontSize="16"
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="3"/>
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTaskTapped"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>