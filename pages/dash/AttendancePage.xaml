<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="plz_fix.pages.dash.AttendancePage"
             Title="Attendance">

    <ScrollView Padding="20">
        <StackLayout>
            <Label Text="All Attendance Records" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Attendances}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" BorderColor="Gray" CornerRadius="10" Padding="10">
                            <StackLayout>
                                <Label Text="{Binding StartDate}" FontAttributes="Bold" />
                                <Label Text="{Binding AttendanceStatus}" />
                                <Label Text="{Binding ClassRoom}" />
                                <!-- now the name -->
                                <Label Text="{Binding Salle}" />
                                <!-- now the name -->
                                <Label Text="{Binding NatureSeance}" />
                                <!-- now the name -->
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>