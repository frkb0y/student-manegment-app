<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="plz_fix.pages.dash.profilepages.note"
             Title="Notes">

    <CollectionView x:Name="NotesCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BackgroundColor="#f5f5f5" CornerRadius="12" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="{Binding SubjectName}" FontSize="20" FontAttributes="Bold" TextColor="#333"/>
                        <Label Text="{Binding Score}" FontSize="16" TextColor="DarkGreen"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
