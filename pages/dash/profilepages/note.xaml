<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="plz_fix.pages.dash.profilepages.note"
             Title="Notes">

    <CollectionView x:Name="NotesCollectionView"
                    IsGrouped="True">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Frame BackgroundColor="#e3f2fd" CornerRadius="12" Padding="12" Margin="10,10,10,2">
                    <Label Text="{Binding Key}" FontSize="20" FontAttributes="Bold" TextColor="#1a237e"/>
                </Frame>
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10,2,10,10" Padding="14" BackgroundColor="#f5f5f5" CornerRadius="12" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="{Binding SubjectName}" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                        <Label Text="{Binding Score, StringFormat='Score: {0}'}" FontSize="15" TextColor="DarkGreen"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>