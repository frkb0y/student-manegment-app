<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="plz_fix.pages.dash.classes"
             Title="Classes">
    <ScrollView>
        <Grid Padding="20" ColumnDefinitions="*,*,*" RowDefinitions="*,*,*,*,*,*,*" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

            <!-- First row -->
            <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#F6A5C0" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BiologyCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="medic.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#F6A5C0" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Biology" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#FFEC99" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChemistryCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="inject.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#FFEC99" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Chemistry" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="0" Grid.Column="2" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#A2D9CE" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding HistoryCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="book.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#A2D9CE" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="History" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <!-- Second row -->
            <StackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#F9D1E1" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LiteratureCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="book.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#F9D1E1" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Literature" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#F6D02F" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GeographyCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="graph.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#F6D02F" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Geography" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="2" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#6EC1E4" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ComputerScienceCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="sc.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#6EC1E4" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Computer Science" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <!-- Third row -->
            <StackLayout Grid.Row="2" Grid.Column="0" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#D4A5A5" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ArtHistoryCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="book.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#D4A5A5" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Art History" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#FF9B85" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PhilosophyCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="book.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#FF9B85" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Philosophy" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="2" Grid.Column="2" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#AEC6CF" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SociologyCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="chart.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#AEC6CF" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Sociology" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <!-- Fourth row -->
            <StackLayout Grid.Row="3" Grid.Column="0" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#E0B0FF" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding MusicCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="screan.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#E0B0FF" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Music" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="3" Grid.Column="1" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#FFB6C1" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding EconomicsCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="graph.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#FFB6C1" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Economics" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="3" Grid.Column="2" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#98C9E2" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding EngineeringCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="sc.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#98C9E2" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Engineering" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <!-- Fifth row -->
            <StackLayout Grid.Row="4" Grid.Column="0" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="black" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LawCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="book.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="Black" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Law" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="4" Grid.Column="1" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#F9A8D4" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PsychologyCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="chart.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#F9A8D4" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Psychology" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

            <StackLayout Grid.Row="4" Grid.Column="2" HorizontalOptions="Center">
                <Frame WidthRequest="80" HeightRequest="80" CornerRadius="30" BackgroundColor="#A4D7E1" Padding="10" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding MathematicsCommand}" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Image Source="math.png" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                        <BoxView Color="#A4D7E1" Opacity="0.3" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center"/>
                    </Grid>
                </Frame>
                <Label Text="Mathematics" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,20"/>
            </StackLayout>

        </Grid>
    </ScrollView>
</ContentPage>